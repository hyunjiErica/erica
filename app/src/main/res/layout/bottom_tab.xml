<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="70dp"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:id="@+id/messagebtn"
        android:background="@drawable/message"
        android:onClick="onClick_messagebtn"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:id="@+id/foodbtn"
        android:background="@drawable/food"
        android:onClick="onClick_foodbtn"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:id="@+id/homebtn"
        android:background="@drawable/home"
        android:onClick="onClick_homebtn"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:id="@+id/notebtn"
        android:background="@drawable/note"
        android:onClick="onClick_notebtn"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:id="@+id/albumbtn"
        android:background="@drawable/album"
        android:onClick="onClick_albumbtn"
        android:layout_gravity="bottom" />

</LinearLayout>

