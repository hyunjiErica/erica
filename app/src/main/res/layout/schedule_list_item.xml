<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorBgDefault">

    <ImageView
        android:id="@+id/front_exist_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:src="@drawable/shape_oval_cyan"/>

    <TextView
        android:id="@+id/schedule_date_tv"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="07.09"
        android:textColor="@color/colorTitleBlack"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/shape_bggray_bottomline"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/schedule_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitleBlack"
                android:textSize="15dp"
                android:text="title"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/schedule_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLeftMenu"
                android:textSize="10dp"
                android:text="time"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/arr_next"/>

    </LinearLayout>


</LinearLayout>