<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView android:id="@+id/article_first_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:src = "@drawable/s_pic_2"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/writeday"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="06.28"
        android:layout_below="@id/article_first_img"/>

    <TextView
        android:id="@+id/article_content_tfd"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeday"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="15dp"
        android:text="hihi"/>

    <TextView
        android:id="@+id/invisible_content_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/transparent"/>

    <TextView
        android:id="@+id/writer_tfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_content_tfd"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/comment_num"
        android:text="생활재활교사"/>


    <TextView
        android:id="@+id/comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_content_tfd"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:text="0"/>


</RelativeLayout>