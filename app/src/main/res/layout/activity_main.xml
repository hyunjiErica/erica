<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBgDefault"
    android:id="@+id/mainactivity_mainview"
    tools:context="dev.erica.hyunji.eeumjieum.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/loginlogoimg"
        android:src="@drawable/login_logo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

   <EditText
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:inputType="textEmailAddress"
       android:ems="10"
       android:id="@+id/emailtfd"
       android:textColor="@color/colorLightGray"
       android:drawableLeft="@drawable/ssemail"
       android:gravity="center_horizontal|center_vertical"
       android:text="이메일"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/loginlogoimg"
       android:layout_marginTop="50dp" />
<!--  android:onClick="onClick_emailtfd"  -->

   <EditText
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:inputType="textVisiblePassword"
       android:ems="10"
       android:id="@+id/pwdtfd"
       android:textColor="@color/colorLightGray"
       android:text="비밀번호"
       android:drawableLeft="@drawable/sspassword"
       android:gravity="center_horizontal|center_vertical"
       android:layout_below="@+id/emailtfd"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp" />


   <Button
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:text="로그인"
       android:id="@+id/loginbtn"
       android:textColor="@color/colorBgDefault"
       android:background="@drawable/shape_darkgray_btn"
       android:layout_marginTop="63dp"
       android:onClick="onClick_login"
       android:layout_below="@+id/emailtfd"
       android:layout_alignStart="@+id/pwdtfd"
       android:layout_alignEnd="@+id/pwdtfd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="회원가입"
        android:id="@+id/joinbtn"
        android:textColor="@color/colorBgDefault"
        android:background="@drawable/shape_midgray_btn"
        android:layout_below="@+id/loginbtn"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/loginbtn"
        android:layout_alignStart="@+id/loginbtn"
        android:onClick="onClick_join" />



</RelativeLayout>
